# Dockerfile para Test Application - Single Stage
FROM amazoncorretto:17-alpine

# Establecer directorio de trabajo
WORKDIR /app

# Instalar Maven
RUN apt-get update && apt-get install -y maven && rm -rf /var/lib/apt/lists/*

# Copiar archivos de configuración de Maven
COPY agrogestion-backend/pom-test.xml pom.xml
COPY agrogestion-backend/mvnw .
COPY agrogestion-backend/mvnw.cmd .
COPY agrogestion-backend/.mvn .mvn

# Crear estructura de directorios
RUN mkdir -p src/main/java/com/agrocloud
RUN mkdir -p src/main/resources

# Copiar solo la aplicación de prueba
COPY agrogestion-backend/src/main/java/com/agrocloud/TestApplication.java src/main/java/com/agrocloud/
COPY agrogestion-backend/src/main/resources/application-test.properties src/main/resources/

# Compilar la aplicación
RUN mvn clean package -DskipTests

# Exponer puerto
EXPOSE 8080

# Healthcheck básico
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD java -cp target/*.jar org.springframework.boot.loader.JarLauncher --help || exit 1

# Ejecutar la aplicación
ENTRYPOINT ["java", "-Dspring.profiles.active=test", "-jar", "target/*.jar"]
