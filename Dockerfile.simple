# Dockerfile simple para Railway
FROM maven:3.9.5-eclipse-temurin-17 AS build

# Establecer directorio de trabajo
WORKDIR /app

# Copiar archivos de configuraci贸n de Maven
COPY agrogestion-backend/pom.xml .

# Copiar c贸digo fuente
COPY agrogestion-backend/src src

# Compilar la aplicaci贸n con Maven
RUN mvn clean package -DskipTests

# Segunda etapa: Runtime
FROM eclipse-temurin:17-jre-alpine

WORKDIR /app

# Instalar wget para healthcheck
RUN apk add --no-cache wget

# Copiar el JAR compilado
COPY --from=build /app/target/agrocloud-backend-1.0.0.jar app.jar

# Exponer puerto
EXPOSE 8080

# Healthcheck
HEALTHCHECK --interval=30s --timeout=15s --start-period=60s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:${PORT:-8080}/ || exit 1

# Ejecutar la aplicaci贸n
CMD ["java", "-Dspring.profiles.active=railway-h2", "-jar", "app.jar"]
